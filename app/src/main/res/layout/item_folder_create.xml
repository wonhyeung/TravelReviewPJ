<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item_folder_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_folder_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_folder_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_folder_orange"
        app:layout_constraintEnd_toStartOf="@id/iv_item_folder_yellow"
        app:layout_constraintStart_toEndOf="@id/iv_item_folder_red"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_folder_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_folder_yellow"
        app:layout_constraintEnd_toStartOf="@id/iv_item_folder_green"
        app:layout_constraintStart_toEndOf="@id/iv_item_folder_orange"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_folder_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_folder_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_folder_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_folder_blue"
        app:layout_constraintEnd_toStartOf="@id/iv_item_folder_purple"
        app:layout_constraintStart_toEndOf="@id/iv_item_folder_green"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_folder_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_folder_purple"
        app:layout_constraintEnd_toStartOf="@id/iv_item_folder_pink"
        app:layout_constraintStart_toEndOf="@id/iv_item_folder_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_folder_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_folder_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/il_item_folder_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/mb_item_folder_create"
        app:layout_constraintStart_toStartOf="parent"
        app:boxStrokeColor="@color/colorButton"
        app:layout_constraintTop_toBottomOf="@id/iv_item_folder_purple">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_item_folder_create"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_item_folder_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/folder_create"
        app:layout_constraintBottom_toBottomOf="@id/il_item_folder_create"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/colorButton"
        app:layout_constraintTop_toBottomOf="@id/iv_item_folder_pink" />

</androidx.constraintlayout.widget.ConstraintLayout>